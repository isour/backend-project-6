extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.fullName')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.actions')
    tbody
      each user in users
        tr
          td= user.id
          td= user.fullName + ' ' + user.lastName
          td= user.email
          td= formatDate(user.createdAt)
          td
            .d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=route('editUser', { id: user.id }))= t('views.users.change')
              form(action=route('user', { id: user.id }) method="post")
                input(name="_method" type="hidden" value="delete")
                input.btn.btn-danger(type="submit" value=t('views.users.delete'))
