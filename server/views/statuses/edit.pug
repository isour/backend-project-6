extends ../layouts/application.pug

block header
  = t('views.statuses.edit.title')

block content
  +formFor()(action=route('status', { id: taskStatus.id }) method='post')
    input(name="_method" type="hidden" value="patch")
    +input(taskStatus, 'name', errors)(type="text")
    +submit(status)(value=t('views.statuses.edit.submit'))
